

<% if book.favorited_by?(current_user) %>
<div class="text-danger">
  <%= link_to book_favorites_path(book.id),method: :delete, class: "text-danger", remote: true do %>
  <%= "♥" %>
  <%= book.favorites.count %>
  <% end %>

</div>
<% else %>
<div class="text-primary">
  <%= link_to book_favorites_path(book.id),method: :post, class: "text-primary", remote: true do  %>
  <%= "♥" %>
  <%= book.favorites.count %>
  <% end %>
</div>
<% end %>