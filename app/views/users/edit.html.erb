<div class="container">
  <div class="row">
    <div class="col mx-auto col-sm-12 col-md-8 col-lg-5 px-3">
  <h2>User info</h2>

    <%= form_with model: @user do |f| %>
    <%= render "layouts/error" ,model: f.object %>
    <div class ="mb-2">
      <%= f.label :name %><br>
      <%= f.text_field :name ,class: "form-control" %><br>
    </div>

    <div class="mb-2">
      <%= f.label :profile_image %><br>
      <%= f.file_field :profile_image, accept: "image/*" %>
    </div>

    <div class ="mb-2">
      <%= f.label :introduction ,"Opinion"  %><br>
      <%= f.text_area :introduction,class: "form-control" %>
    </div>
      <%= f.submit "Update User", class: "btn btn-secondary btn-sm"  %>
  <% end %>
  </div>
  </div>
</div>