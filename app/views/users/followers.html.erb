<div class="container">
  <h2>Follower Users</h2>
  <% if @users.exists? %>
  <table class ="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.profile_image.present? %>
                <%= image_tag user.profile_image,size: "80x80" %>
              <% else %>
                <%= image_tag "ot113.png",size: "80x80" %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td>フォロー数:<%= user.followers.count %></td>
            <td>フォロワー数:<%= user.followings.count %></td>
            <td><%= link_to "Show",user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>ユーザーはいません</p>
    <% end %>
</div>