<table>

  <% comments.each do |comment| %>
  <tr>
    <td>
    <%= link_to user_path(comment.user.id) do %>
      <% if comment.user.profile_image.present? %>
        <%= image_tag comment.user.profile_image,size: "80x80" %>
      <% else %>
        <%= image_tag "ot113.png",size: "80x80" %>
      <% end %><br>
       <%= book.user.name %>
    <% end %>

  </td>
  <td>
    <%= comment.comment_text %>
  </td>
  <td>
    <%= link_to "Destroy",book_comment_path(book.id,comment.id),method: :delete, remote: true, class: "btn btn-danger" %>
  </td>

  </tr>
  <% end %>

  <tr></tr>
</table>